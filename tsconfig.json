{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "stripInternal": true,
    "declaration": true,
    "outDir": "./dist",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node"
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  },
  "include": ["**/*.ts"]
}
  